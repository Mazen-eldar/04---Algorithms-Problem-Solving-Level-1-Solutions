// Type a program that asks the user to enter his name and prints it on 
the screen

#include <iostream>
#include <string>
using namespace std;
string ReadName()
{
string Name;
cout << "Pleas enter your name ? " << endl;
getline(cin, Name);
return Name;
}
void PrintName(string Name)
{
cout << "\n Your Name is : " << Name << endl;
}
int main()
{
PrintName(ReadName());
}
